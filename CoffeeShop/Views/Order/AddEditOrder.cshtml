@model OrderModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Order</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  

    <!-- Custom CSS -->
    <style>
        .form-container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
        }

        .form-label {
            font-weight: bold;
        }
    </style>
</head>
<body>
   
    
    <div class="card-body form-container">
        <h1 class="card-title text-center">Add/Edit Order</h1>
        <!-- Vertical Form -->
        <form class="row g-3 needs-validation" id="orderForm" asp-action="OrderSave" method="post">
            <input type="hidden"  asp-for="OrderID"  />
            <div class="col-12">
                <label for="inputOrderDate" class="form-label">Order Date</label>
                <input type="date" class="form-control" id="inputOrderDate" asp-for="OrderDate" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                <span class="text text-danger" asp-validation-for="OrderDate"></span>
            </div>
            <div class="col-12">
                <label for="inputCustomerName" class="form-label">Customer Name</label>
                <input type="text" class="form-control" id="inputCustomerName" asp-for="CustomerName"  >
                <span class="text text-danger" asp-validation-for="CustomerName"></span>
            </div>

            <div class="col-12">
                <label for="inputPaymentMode" class="form-label">Payment Mode</label>
                <select class="form-control" id="inputPaymentMode" asp-for="PaymentMode">
                    <option value="">Select payment mode</option>
                    <option value="Credit Card">Credit Card</option>
                    <option value="Debit Card">Debit Card</option>
                    <option value="PayPal">PayPal</option>
                    <option value="Online">ONLINE</option>
                    <option value="Bank Transfer">Bank Transfer</option>
                </select>
                <span class="text text-danger" asp-validation-for="PaymentMode"></span>
            </div>

            <div class="col-12">
                <label for="inputTotalAmount" class="form-label">Total Amount</label>
                <input type="text" class="form-control" id="inputTotalAmount" asp-for="TotalAmount" >
                <span class="text text-danger" asp-validation-for="TotalAmount"></span>
            </div>

            <div class="col-12">
                <label for="inputShippingAddress" class="form-label">Shipping Address</label>
                <textarea class="form-control" id="inputShippingAddress"  rows="3" asp-for="ShippingAddress" ></textarea>
                <span class="text text-danger" asp-validation-for="ShippingAddress"></span>
            </div>

            <div class="col-12">
                <label for="inputUserId" class="form-label">User Name</label>
                <select class="form-control" asp-for="UserID">
                    <option value="">Select User</option>
                    @foreach (var user in ViewBag.UserList)
                    {
                        <option value="@user.UserID">@user.UserName</option>
                    }
                </select>
                <span class="text text-danger" asp-validation-for="UserID"></span>
            </div>


            

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-action="OrderList" asp-controller="Order" class="btn btn-secondary">Cancel </a>
            </div>
        </form>
    </div>

    
</body>
</html>
